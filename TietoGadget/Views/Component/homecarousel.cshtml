@model DD4T.ContentModel.IComponentPresentation
@using TietoGadget.Helpers;
@using DD4T.ContentModel;
@*
    This is a very basic sample Component View you can delete this
*@

    <!-- Carousel
     ================================================== -->
    <div id="myCarousel" class="carousel slide">
        <div class="carousel-inner">
            @if (Model.Component.Fields["images"] != null)
        {
            var fieldSet = Model.Component.Fields["images"].EmbeddedValues;
            int i = 0;
                 <!-- Wrapper for slides -->
            foreach (IFieldSet field in fieldSet)
            {
                string imgurl, title,header,description,link;
                CommonHelper.GetCarouselComponentValues(field, out imgurl, out title, out header, out description, out link);
                if (i == 0)
                {
        <div class="item active">
            <img src="@imgurl" alt="@title" class="img-responsive" />
            <div class="container">
                <div class="carousel-caption">
                    <h1>@header</h1>
                    <p class="lead">@description</p>
                    @if(link !="#")
                                {
                                <a class="btn btn-large btn-primary" href="@link">Browse @header gallery</a>
                                }
                </div>
            </div>
        </div>
                }
                else
                {
        <div class="item">
            <img src="@imgurl" alt="@title" class="img-responsive" />
            <div class="container">
                <div class="carousel-caption">
                    <h1>@header</h1>
                    <p class="lead">@description</p>
                    @if(link !="#")
                                {
                                <a class="btn btn-large btn-primary" href="@link">Browse @header gallery</a>
                                }
                </div>
            </div>
        </div>
                }

                i++;
            }
        }


        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
    <!-- /.carousel -->

